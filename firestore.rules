rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write to authenticated users on their own user doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Example: collection for affiliate referrals
    match /referrals/{referralId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }
    
    match /reports/{reportId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /letters/{letterId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /affiliates/{affiliateId}/{document=**} {
       allow read, write: if request.auth != null && request.auth.uid == affiliateId;
    }

    // Publicly readable collections
    match /creditBoosters/{boosterId} {
      allow read: if true;
      allow write: if false;
    }

    match /affiliateStats/{statId} {
      allow read: if true;
      allow write: if false;
    }
  }
}