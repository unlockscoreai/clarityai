
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is an affiliate
    function isAffiliate(userId) {
      return exists(/databases/$(database)/documents/affiliates/$(userId));
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /reports/{reportId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    match /letters/{letterId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    match /creditBoosters/{boosterId} {
        allow read: if true;
        allow write: if false; // Only manageable from the Firebase Console
    }
    
    match /affiliates/{affiliateId} {
        // Only the affiliate can read their own data
        allow read: if request.auth != null && request.auth.uid == affiliateId;
        // Writes are handled by cloud functions
        allow write: if false; 
        
        // Clients subcollection
        match /clients/{clientId} {
            // Affiliate can read/write their own client data
            allow read, write: if request.auth != null && request.auth.uid == affiliateId;
        }
    }
    
     match /affiliateStats/{affiliateId} {
      // Leaderboard is public, but individual stats are not
      allow read: if true; 
      // Stats are updated via secure backend processes only
      allow write: if false;
    }
    
    // Allow unauthenticated access to the createAffiliate function
    match /functions/createAffiliate {
      allow create: if true;
    }
  }
}
