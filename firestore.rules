
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /reports/{reportId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /affiliates/{affiliateId} {
      allow create;
      allow read, update: if request.auth.uid == affiliateId;
      allow update: if request.auth.uid == resource.data.referrerId && "credits" in request.resource.data && "referrals" in request.resource.data;

      match /clients/{clientId} {
        allow read, write: if request.auth.uid == affiliateId;
      }
      
      match /referredAffiliates/{referredId} {
        allow read: if request.auth.uid == affiliateId;
      }
    }

    match /letters/{letterId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /transactions/{transactionId} {
      allow read: if request.auth.uid == resource.data.userId;
    }
  }
}
