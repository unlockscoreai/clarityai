rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own data.
    match /users/{uid} {
      allow read, update: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null;
    }

    // Reports can only be read by the owner, and written by the server/API.
    match /reports/{reportId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false; 
    }

    // Disputes can only be read by the owner, and written by the server/API.
     match /disputes/{disputeId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    // Letters can only be read by the owner, and written by the server/API.
    match /letters/{letterId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    // Boosters are public information.
    match /creditBoosters/{boosterId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Affiliates can manage their own documents and subcollections.
    match /affiliates/{affiliateId} {
        allow read, write: if request.auth != null && request.auth.uid == affiliateId;
        
        match /clients/{clientId} {
             allow read, write: if request.auth != null && request.auth.uid == affiliateId;
        }
    }
    
    // Affiliate stats are public for leaderboards.
    match /affiliateStats/{statId} {
        allow read: if true;
        allow write: if false;
    }
  }
}
